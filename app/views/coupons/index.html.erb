<div class="page-header">
  <h1>
    Coupons
    <a href="/coupons/new" class="btn btn-lg btn-success">New Coupon</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Coupon link</th>
        <th>Description</th>
        <th>Image url</th>
        <th>Actions</th>
      </tr>

      <% @coupons.each do |coupon| %>
      <tr>
        <td><%= coupon.user_id %></td>
        <td><%= coupon.coupon_link %></td>
        <td><%= coupon.description %></td>
        <td><%= coupon.image_url %></td>
        <td>
          <a href="/coupons/<%= coupon.id %>" class="btn btn-primary">Show</a>
          <a href="/coupons/<%= coupon.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_coupon/<%= coupon.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
