<!-- Validation failure messages -->
<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Comment #<%= @comment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_comment/<%= @comment.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for text -->
      <div class="form-group">
        <label for="text" class="control-label">
          Text
        </label>

        <input type="text" id="text" name="text" placeholder="Text" class="form-control" value="<%= @comment.text %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @comment.user_id %>">
      </div>

      <!-- Label and input for coupon_id -->
      <div class="form-group">
        <label for="coupon_id" class="control-label">
          Coupon
        </label>

        <input type="text" id="coupon_id" name="coupon_id" placeholder="Coupon" class="form-control" value="<%= @comment.coupon_id %>">
      </div>

      <button class="btn btn-warning">
        Update Comment
      </button>
      or
      <a href="/comments/<%= @comment.id %>">Cancel</a>
    </form>
  </div>
</div>
